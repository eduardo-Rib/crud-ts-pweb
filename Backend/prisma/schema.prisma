generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Continente {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(100)
  descricao String   @db.VarChar(100)
  paises    Pais[]
}

model Pais {
  id             Int       @id @default(autoincrement())
  nome           String    @db.VarChar(100)
  populacao      Int
  idioma_ofc     String    @db.VarChar(100)
  moeda          String    @db.VarChar(100)
  id_continente  Int
  continente     Continente @relation(fields: [id_continente], references: [id])
  cidades        Cidade[]
}

model Cidade {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(100)
  populacao Int
  latitude  String   @db.VarChar(100)
  longitude String   @db.VarChar(100)
  id_pais   Int
  pais      Pais     @relation(fields: [id_pais], references: [id])
}